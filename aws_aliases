
#aws region 
export AWS_REGION=us-west-2

#AWS ECR Login with multiple profiles
function ecr_login() {
  local PROFILE=$1
  local ECR_ARN=$2
  local ERROR_STD_OUT=""
  if [ -z "$1" ] 
  then
    echo "missing profile or ECR ARN"  1>&2
    exit
  fi
  if [ -z "$2" ] 
  then
    echo "missing profile or ECR ARN" 1>&2
  fi
}

#show ec2 info 
#usage: ec2 <tag:name> 
function ec2(){
  aws ec2 describe-instances --filters "Name=tag:Name,Values=$1" --region=$2 --output table
}
