#!/usr/bin/env bash

#AWS ECR Login with multiple profiles

function ecr_login() {
  local PROFILE=$1
  local ECR_ARN=$2
  local ERROR_STD_OUT=""
  if [ -z "$1" ] 
  then
    echo "missing profile or ECR ARN"  1>&2
    exit
  fi
  if [ -z "$2" ] 
  then
    echo "missing profile or ECR ARN" 1>&2
  fi
}


#note stuff
