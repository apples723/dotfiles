# copy folders easier
#usage: cpd directory_to_copy new_directory_name
function cpd(){
  cp -r $1 $2 
}
# copy terraform folder for use as a template
function cpt(){
  cp -r $1 $2
  rm -rf $2/.terraform
  cp -f ~/.dotfiles/templates/main.tf $2/main.tf
}

